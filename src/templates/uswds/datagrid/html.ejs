<table class="usa-table datagrid-table">
  {% if (ctx.hasHeader) { %}
  <thead>
    <tr>
      {% ctx.columns.forEach(function(col) { %}
        <th scope="col" class="{{col.validate && col.validate.required ? 'field-required' : ''}}">
          {{ col.hideLabel ? '' : ctx.t(col.label || col.title) }}
          {% if (col.tooltip) { %} <i ref="tooltip" class="{{ctx.iconClass('question-sign')}} text-base"></i>{% } %}
        </th>
      {% }) %}
    </tr>
  </thead>
  {% } %}
  <tbody>
    {% ctx.rows.forEach(function(row) { %}
    <tr>
      {% ctx.columns.forEach(function(col) { %}
        <td ref="{{ctx.datagridKey}}">
          {{row[col.key]}}
        </td>
      {% }) %}
    </tr>
    {% }) %}
  </tbody>
</table>
