<div
  id="{{ctx.id}}"
  class="{{ctx.component.type !== 'button' ? ctx.component.customClass : ''}}
    formio-component-{{ctx.component.type}}
    {{!ctx.self.hasInput ? 'usa-prose' : 'formio-form-group'}}
    {{!ctx.visible ? 'formio-hidden' : ''}}"
  {% if (ctx.styles) { %} style="{{ctx.styles}}"{% } %}
  ref="component"
>
  {% if (ctx.visible) { %}
  {{ctx.children}}
  {% } %}
</div>
